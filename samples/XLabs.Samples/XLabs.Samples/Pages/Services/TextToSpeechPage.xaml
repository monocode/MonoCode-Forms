<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="XLabs.Samples.Pages.Services.TextToSpeechPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Text To Speech Service">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding TextToSpeak, Mode=TwoWay}" />
            <Button x:Name="BtnSpeak"
                    Command="{Binding SpeakCommand}"
                    HeightRequest="100"
                    Text="Speak"
                    WidthRequest="200" />
        </StackLayout>

    </ContentPage.Content>
</ContentPage>

