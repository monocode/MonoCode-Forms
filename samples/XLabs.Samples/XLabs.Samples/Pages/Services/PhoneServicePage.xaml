<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="XLabs.Samples.Pages.Services.PhoneServicePage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Phone Service">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding NumberToCall, Mode=TwoWay}" />
            <Button x:Name="BtnSpeak"
                    Command="{Binding CallCommand}"
                    HeightRequest="100"
                    Text="Call"
                    WidthRequest="200" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

